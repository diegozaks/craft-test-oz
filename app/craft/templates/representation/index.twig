{% extends "_layout" %}

{% block featuredShow %}
{# Replace with whatever header we want for representation #}
{% endblock %}


{% block content %}
<section id="showList">
	<h2>
		{{ "Representation" | translate }}
	</h2>
	{% for entry in craft.entries.section('representation') %}

	<article class="show">
		<div class="left">
				<h2>{{ entry.title }}</h2>
			<h3>{{ entry.representationCompanyLocation }}</h3>
		</div>

		<div class="right">
			{% set image = entry.representationCompanyThumbnail.first() %}
			{% if image %}
				<img src="/{{ image.url }}" alt="">
			{% endif %}
			<p>{{ entry.representationCompanyText }}</p>
			<a href="{{ entry.representationCompanyText }}">Website</a>
		</div>
		
    </article>

	{% endfor %}
</section>

{% endblock %}
